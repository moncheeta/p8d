{
    cache
}

prime8.dev {
	root * /web/
	file_server
	try_files {path} {path}.html
  cache

  handle_errors {
      @404 {
          expression {http.error.status_code} == 404
      }
      rewrite @404 /404.html
      file_server
  }

  tls damian@prime8.dev
}

mail.prime8.dev {
  tls damian@prime8.dev
}

git.prime8.dev {
  reverse_proxy http://git:80
  cache

  tls damian@prime8.dev
}
